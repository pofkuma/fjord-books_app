<h1><%= t('views.common.title_show', name: User.model_name.human) %></h1>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:postal_code) %>:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong><%= User.human_attribute_name(:address) %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= User.human_attribute_name(:self_introduction) %>:</strong>
  <%= @user.self_introduction %>
</p>

<p>
  <strong><%= User.human_attribute_name(:avatar) %>:</strong>
  <% if @user.avatar.attached? %>
    <br>
    <%= image_tag @user.avatar.variant(resize_to_fill: [150, 150])%>
  <% end %>
</p>

<hr>

<p>
  <strong><%= t('.label.followings_count') %>:</strong> <%= @user.following_relationships.count %> |
  <strong><%= t('.label.followers_count') %>:</strong> <%= @user.follower_relationships.count %>
</p>

<p>
  <%= link_to t('users.followings.index.title'), user_followings_path(@user.id) %> |
  <%= link_to t('users.followers.index.title'), user_followers_path(@user.id) %>
</p>

<% unless current_user == @user %>
  <p>
    <% if current_user.following?(user_id: @user.id) %>
      <%= button_to t('.follow.destroy'), user_follow_path(@user.id), method: :delete %>
    <% else %>
      <%= button_to t('.follow.create'), user_follows_path(@user.id), method: :post %>
    <% end %>
  </p>
<% end %>

<% if current_user == @user %>
  <%= link_to t('views.common.edit'), edit_user_registration_path %> |
<% end %>
<%= link_to t('views.common.back'), users_path %>
