<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:self_introduction) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @followings.each do |following| %>
      <tr>
        <th>
          <% if following.avatar.attached? %>
            <%= image_tag following.avatar.variant(resize_to_fill: [30, 30])%>
          <% end %>
        </th>
        <td><%= following.email %></td>
        <td><%= following.name %></td>
        <td><%= following.self_introduction %></td>
        <td><%= link_to t('views.common.show'), following %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @followings %>

<%= link_to t('views.common.back'), user_path(params[:user_id]) %>
